<!-- header -->
<% include ../partials/header %>
<!-- end header -->
                <!-- /.navbar-top-links -->
                <div class="navbar-default sidebar" role="navigation">
                    <div class="sidebar-nav navbar-collapse">
                        <!-- menu -->
                        <% include ../partials/menu %>
                        <!-- end header -->
                    </div>
                </div>
            </nav>
            <div id="page-wrapper">
                <div class="row">
                    <div class="col-lg-12">
                        <h4 class="page-header">Slide</h4>
                    </div>
                </div>
                <!-- CONTENT -->
                <!-- /.row -->
                <div class="row">
                  <div class="col-lg-12">
                      <div class="panel panel-default">
                          <div class="panel-heading">
                                <a href="/dashboard/slide/new"><button type="button" class="btn btn-success" ><i class="fa fa-plus" aria-hidden="true"></i></button></a>
                          </div>
                          <!-- /.panel-heading -->
                          <div class="panel-body">
                              <div class="dataTable_wrapper">
                                  <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                      <thead>
                                          <tr>
                                              <th>No</th>
                                              <th>NAME</th>
                                              <th>DESCRIPTION</th>
                                              <th>CREATE DATE</th>
                                              <th>ACTION</th>
                                          </tr>
                                      </thead>
                                      <tbody>
                                            <% slides.forEach(function(slide,index){ %>
                                                <tr>
                                                    <td><%= index + 1 %></td>
                                                    <td><%=  slide.name %></td>
                                                    <td><%=  slide.description %></td>
                                                    <td><%=  slide.createdAt %></td>
                                                    <td>
                                                        <ul class="list-inline">
                                                            <li>
                                                                <a href="/dashboard/slide/edit/<%= slide.id %>">
                                                                    <input type="submit"  value="Update" class="btn btn-warning">
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <form class="d-inline" action="/dashboard/slide/delete/<%= slide.id %>" method="post">
                                                                    <input type="submit"  value="Delete" class="btn btn-danger">
                                                                </form>
                                                            </li>
                                                        </ul>
                                                    </td>
                                                </tr>
                                            <% }) %>
                                      </tbody>
                                  </table>
                                  <ul class="pagination pull-right">
                                    <li class="previous"><a href="#">Previous</a></li>
                                    <li><a href="#">1</a></li>
                                    <li><a href="#">2</a></li>
                                    <li><a href="#">3</a></li>
                                    <li class="next"><a href="#">Next</a></li>
                                  </ul>
                              </div>
                          </div>
                          <!-- /.panel-body -->
                      </div>
                      <!-- /.panel -->
                  </div>
                  <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
                <!-- END CONTENT -->
            </div>   
<!-- header -->
<% include ../partials/footer %>
<!-- end header -->
       