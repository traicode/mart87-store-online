<div class="thumbnail">
    <a href="#" data-toggle="modal" data-target=".bs-example-modal-lg" ng-click="onImageClick(product)">
        <img src="{{ parseProImage(product.images[0]) }}" />
    </a>
    <div class="caption">
        <h5>
            {{ product.name }}
        </h5>
        <h4>{{ product.price | currency : "$" }}</h4>
        <span>/ 1 case</span>
        <span class="instock">In Stock</span>
        <span class="rate-product">
            <button class="btn btn-xs btn-link active">
                <i class="fa fa-star"></i>
            </button>
            <button class="btn btn-xs btn-link active">
                <i class="fa fa-star"></i>
            </button>
            <button class="btn btn-xs btn-link active">
                <i class="fa fa-star"></i>
            </button>
            <button class="btn btn-xs btn-link">
                <i class="fa fa-star"></i>
            </button>
            <button class="btn btn-xs btn-link">
                <i class="fa fa-star"></i>
            </button>
        </span>
    </div>

    <div class="product-control-group">
        <div class="product-quantity-button">
            <div class="input-group">
                <span class="input-group-btn">
                    <button class="btn btn-link btn-xs btn_minus_qty" type="button" ng-click="decreaseQty(product)">
                        <i class="fa fa-caret-down" aria-hidden="true"></i>
                    </button>
                </span>
                <input type="text" class="form-control pro_input_qty" name="product.qty" ng-model="product.qty">
                <span class="input-group-btn">
                    <button class="btn btn-xs btn-link btn_plus_qty" type="button" ng-click="increaseQty(product)">
                        <i class="fa fa-caret-up" aria-hidden="true"></i>
                    </button>
                </span>
            </div>
        </div>
        <button class="btn-add-to-cart btn btn-primary btn-block" type="button" tabindex="0" id="btn-add-to-cart" ng-click="addToCart(product)">
                <span class="hidden-xs hidden-sm hidden-md">
                    <i class="fa fa-shopping-basket"></i>&nbsp;&nbsp;</span>
                Add to Cart
        </button>
    </div>
</div>
