<section id="register-panel">
  <div class="container">

  <div class="border-top"></div>

    <!-- Return Customer  -->
      <div class="col-xs-12 col-sm-12 col-md-7 col-lg-7">
          <div class="return-costomer-register">
            <h3>Register Account</h3>
            <h5>If you already have an account with us, please login at the <a href="/login">login page.</a></h5>
              <!-- facebook login -->
                <i class="fa fa-facebook"></i> 
              <button type="button" class="btn btn-primary btn-block active btn-facebook">Login with Facebbok</button>
