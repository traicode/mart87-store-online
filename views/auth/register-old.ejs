              <form role="form" action="/auth/local/register" method="post">

              <div class="form-header">
                <div class="title">Your Personal Details</div>
                <div class="border-buttom"></div>
              </div>

              <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
              <label for="username"><span class="require">*</span>Username</label>
              <input type="text" class="form-control" name="username" id="username" placeholder="username">
              </div>

             <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
              <label for="email">E-Mail</label>
              <input type="email" class="form-control"  name="email" id="email" placeholder="email@gmail.com">
              </div>

             <div class="form-group col-xs-12 col-sm-12">
              <label for="exampleInputPhone"><span class="require">*</span>YOUR PHONE NUMBER</label>
              <input type="text" class="form-control" id="exampleInputPhone" placeholder="010888***">
             </div>

             <div class="form-header">
                <div class="title">Your Address</div>
                <div class="border-buttom"></div>
              </div>

              <div class="form-group col-xs-12 col-sm-12">
              <label for="exampleInputPhone"><span class="require">*</span>Your Address</label>
              <input type="text" class="form-control" id="exampleInputPhone" placeholder="House number, build name, room number(In case apartment)">
             </div>


              <div class="form-header">
                <div class="title">Your Password</div>
                <div class="border-buttom"></div>
              </div>

             <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6">
              <label for="password"><span class="require">*</span>Password</label>
              <input type="text" class="form-control" name="password" id="password" placeholder="Password">
              </div>

             <div class="form-group col-xs-12 col-sm-12 col-md-6 col-lg-6">
              <label for="confirm-password"><span class="require">*</span>Password Confirm</label>
              <input type="text" class="form-control" name="confirm-password" id="confirm-password" placeholder="Password Confirm">
              </div>


              <div class="form-header">
                <div class="title">Newsletter</div>
                <div class="border-buttom"></div>
              </div>

              <div class="form-group col-xs-12 col-sm-12 col-md-4 col-lg-4">
                <p>SUBSCRIBE TO </p>
                <p>PENGPOS.COM FOR </p>
                <p>DISCOUT & LATEST NEWS</p>
              </div>

              <div class="form-group col-xs-12 col-sm-12 col-md-8 col-lg-8">
              Yes <input type="checkbox" checked="checked"> No
              </div>


              <div class="form-group col-xs-12 col-sm-12 col-md-12 col-lg-12">
                    <div class="checkbox">
                  I have read and agree to the <a href="#">Privacy Policy</a><input type="checkbox">
                </div>
              </div>
                
              <button type="submit" class="btn btn-success btn-block btn-new-register">Continue</button>
             
            </form>
              </div>
              <!-- 	form login -->

          </div>
        
      </div>
