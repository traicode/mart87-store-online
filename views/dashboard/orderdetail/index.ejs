<!-- header -->
<% include ../partials/header %>
<!-- end header -->
                <!-- /.navbar-top-links -->
                <div class="navbar-default sidebar" role="navigation">
                    <div class="sidebar-nav navbar-collapse">
                        <!-- menu -->
                        <% include ../partials/menu %>
                        <!-- end header -->
                    </div>
                </div>
            </nav>
            <div id="page-wrapper">
                <div class="row">
                    <div class="col-lg-12">
                        <h4 class="page-header">Order Detail</h4>
                    </div>  
                </div>
                <a href="/dashboard/order"><button type="button" class="btn btn-primary">Back</button></a>
                <!-- CONTENT -->
                <!-- /.row -->
                <div class="row">
                  <div class="col-lg-12">
                      <div class="panel panel-default">
                          <div class="panel-heading">
                                <!-- <a href="/dashboard/order/new"><button type="button" class="btn btn-success" ><i class="fa fa-plus" aria-hidden="true"></i></button></a> -->
                             <!-- <ul class="list-inline">
                                <li>Search &nbsp; <input type="text" name="search" id="search-admin" placeholder="Search.."></li>
                                <li>State Date &nbsp; <input type="date" id="start-date"></li>
                                <li>End Date &nbsp; <input type="date" id="end-date"></li>
                                <li><button type="button" class="btn btn-primary"><i class="fa fa-search" aria-hidden="true"></i> &nbsp;Search </button></li>
                             </ul>    -->
                            
                          </div>
                          <!-- /.panel-heading -->
                          <div class="panel-body">
                              <div class="dataTable_wrapper">
                                  <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                      <thead>
                                          <tr>
                                              <th>No</th>
                                              <th>PRODUCT</th>
                                              <th>QTY</th>
                                              <th>TYPE</th>
                                              <th>PRICE</th>
                                              <th>ACTION</th>
                                          </tr>
                                      </thead>
                                      <tbody>
                                            <% if (data) { %>
                                            <% data.forEach(function(orderDetail,index){ %>
                                                <tr>
                                                    <td><%= index + 1 %></td>
                                                    <td><%= orderDetail.product.name %></td>
                                                    <td><%= orderDetail.qty %></td>
                                                    <td><%= orderDetail.product.type %></td>
                                                    <td><%= orderDetail.product.price %></td>
                                                    <td>
                                                        <ul class="list-inline">
                                                            <li>
                                                                <a href="/dashboard/order/edit/<%= orderDetail.id %>">
                                                                    <input type="submit"  value="Update" class="btn btn-warning">
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <form class="d-inline" action="/dashboard/order/delete/<%= orderDetail.id %>" method="post">
                                                                    <input type="submit"  value="Delete" class="btn btn-danger">
                                                                </form>
                                                            </li>
                                                        </ul>
                                                    </td>
                                                </tr>
                                            <% }) %>
                                            <% }else { %>    
                                                <div class="col-xs-2 col-sm-2 col-md-2">
                                                        <a href="/">
                                                            <img src="images/icon/loading_spinner.gif"/>
                                                        </a>
                                                </div>
                                            <% } %>
                                      </tbody>
                                  </table>
                                  <ul class="pagination pull-left">
                                        <li>Total : <%= meta.total %></li>
                                      </ul>
                                      <ul class="pagination pull-right">
                                        <li class="previous"><a href="#">Prev</a></li>
                                        <% if(meta.pageCount > 1)  {%>
                                            <% for(var i=1; i <= meta.pageCount; i++) { %>
                                                <li><a href="<%=sails.getBaseUrl()%>/dashboard/orderdetail?page=<%= i %>"><%= i %></a></li>
                                             <% } %>
                                        <%}%> 
                                        <li class="next"><a href="#">Next</a></li>
                                      </ul>
                              </div>
                          </div>
                          <!-- /.panel-body -->
                      </div>
                      <!-- /.panel -->
                  </div>
                  <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
                <!-- END CONTENT -->
            </div>   
<!-- header -->
<% include ../partials/footer %>
<!-- end header -->
       