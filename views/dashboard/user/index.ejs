<!-- header -->
<% include ../partials/header %>
<!-- end header -->
                <!-- /.navbar-top-links -->
                <div class="navbar-default sidebar" role="navigation">
                    <div class="sidebar-nav navbar-collapse">
                        <!-- menu -->
                        <% include ../partials/menu %>
                        <!-- end header -->
                    </div>
                </div>
            </nav>
            <div id="page-wrapper">
                <div class="row">
                    <div class="col-lg-12">
                        <h4 class="page-header">User</h4>
                    </div>
                </div>
                <!-- CONTENT -->
                <!-- /.row -->
                <div class="row">
                  <div class="col-lg-12">
                      <div class="panel panel-default">
                          <div class="panel-heading">
                                <a href="/dashboard/user/new"><button type="button" class="btn btn-success" ><i class="fa fa-plus" aria-hidden="true"></i>&nbsp; Add</button></a>
                                <!-- <ul class="list-inline">
                                        <li>SEARCH &nbsp; <input type="text" name="search" id="search-admin" placeholder="Search.."></li>
                                        <li>FROM DATE &nbsp; <input type="date" id="start-date"></li>
                                        <li>TO DATE &nbsp; <input type="date" id="end-date"></li>
                                        <li><button type="button" class="btn btn-primary"><i class="fa fa-search" aria-hidden="true"></i> &nbsp;Search </button></li>
                                </ul>   -->
                            </div>
                          <!-- /.panel-heading -->
                          <div class="panel-body">
                              <div class="dataTable_wrapper">
                                  <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                      <thead>
                                          <tr>
                                              <th>No</th>
                                              <th>FIRST NAME</th>
                                              <th>FIRST NAME</th>
                                              <th>EMAIL</th>
                                              <th>ROLE</th>
                                              <th>ACTION</th>
                                          </tr>
                                      </thead>
                                      <tbody>
                                            <% if (users) { %>
                                            <% users.forEach(function(user,index){ %>
                                                <tr>
                                                    <td><%= index + 1 %></td>
                                                    <td><%=  user.firstName %></td>
                                                    <td><%=  user.lastName %></td>
                                                    <td><%=  user.email %></td>
                                                    <% if (user.role == 1) {%>
                                                        <td>Admin</td>
                                                    <% }else { %> 
                                                        <td>User</td>
                                                    <% }%>    
                                                    <td>
                                                        <ul class="list-inline">
                                                            <li>
                                                                <a href="/dashboard/user/edit/<%= user.id %>">
                                                                    <input type="submit"  value="Update" class="btn btn-warning">
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <form class="d-inline" action="/dashboard/user/delete/<%= user.id %>" method="post">
                                                                    <input type="submit"  value="Disable" class="btn btn-danger">
                                                                </form>
                                                            </li>
                                                        </ul>
                                                    </td>
                                                </tr>
                                            <% }) %>
                                            <% }else { %>    
                                                <div class="col-xs-2 col-sm-2 col-md-2">
                                                        <a href="/">
                                                            <img src="images/icon/loading_spinner.gif"/>
                                                        </a>
                                                </div>
                                            <% } %>
                                      </tbody>
                                  </table>
                                  <ul class="pagination pull-right">
                                    <li class="previous"><a href="#">Prev</a></li>
                                    <li><a href="#">1</a></li>
                                    <li><a href="#">2</a></li>
                                    <li><a href="#">3</a></li>
                                    <li class="next"><a href="#">Next</a></li>
                                  </ul>
                              </div>
                          </div>
                          <!-- /.panel-body -->
                      </div>
                      <!-- /.panel -->
                  </div>
                  <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
                <!-- END CONTENT -->
            </div>   
<!-- header -->
<% include ../partials/footer %>
<!-- end header -->
       