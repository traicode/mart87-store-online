<!-- header -->
<% include ../partials/header %>
<!-- end header -->
                <!-- /.navbar-top-links -->
                <div class="navbar-default sidebar" role="navigation">
                    <div class="sidebar-nav navbar-collapse">
                        <!-- menu -->
                        <% include ../partials/menu %>
                        <!-- end header -->
                    </div>
                </div>
            </nav>
            <div id="page-wrapper">
                <div class="row">
                    <div class="col-lg-12">
                        <h4 class="page-header">Category</h4>
                    </div>
                </div>
                <!-- CONTENT -->
                <!-- /.row -->
                <div class="row">
                  <div class="col-lg-12">
                      <div class="panel panel-default">
                          <div class="panel-heading">
                                <a href="/dashboard/category/new"><button type="button" class="btn btn-success" ><i class="fa fa-plus" aria-hidden="true"></i>&nbsp; Add</button></a>
                                <!-- <ul class="list-inline">
                                        <li>CATEGORY NAME &nbsp; <input type="text" name="search" id="search-admin" placeholder="..."></li>
                                        <li>FROM DATE &nbsp; <input type="date" id="start-date"></li>
                                        <li>TO DATE &nbsp; <input type="date" id="end-date"></li>
                                        <li><button type="button" class="btn btn-primary"><i class="fa fa-search" aria-hidden="true"></i> &nbsp;Search </button></li>
                                </ul>   -->
                          </div>
                          <!-- /.panel-heading -->
                          <div class="panel-body">
                              <div class="dataTable_wrapper">
                                  <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                                      <thead>
                                          <tr>
                                              <th>No</th>
                                              <th>IMAGE</th>
                                              <th>NAME</th>
                                              <th>DESCRIPTION</th>
                                              <th>ACTION</th>
                                          </tr>
                                      </thead>
                                      <tbody>
                                            <% data.forEach(function(category,index){ %>
                                                <tr>
                                                    <td><%= index + 1 %></td>
                                                    <td>
                                                        <% if(category.image) {%>
                                                            <img src="/images/category/<%=  category.image %>" class="img-circle img-responsive" alt="product image" width="50" height="100%" style="margin: 0 auto;">
                                                         <% }else{ %>   
                                                            <img src="/images/icon/no_image.png" class="img-circle img-responsive" alt="product image" width="50" height="100%" style="margin: 0 auto;">
                                                        <% }%> 
                                                    </td>
                                                    <td><%= category.name %></td>
                                                    <td><%=  category.description %></td>
                                                    <td>
                                                        <ul class="list-inline">
                                                            <li>
                                                                <a href="<%=sails.getBaseUrl()%>/dashboard/category/edit/<%= category.id %>">
                                                                    <input type="submit"  value="Update" class="btn btn-warning">
                                                                </a>
                                                            </li>
                                                            <li>
                                                                <form class="d-inline" action="/dashboard/category/delete/<%= category.id %>" method="post">
                                                                    <input type="submit"  value="Delete" class="btn btn-danger">
                                                                </form>
                                                            </li>
                                                        </ul>
                                                    </td>
                                                </tr>
                                            <% }) %>
                                      </tbody>
                                  </table>
                                  <ul class="pagination pull-left">
                                    <li>Total : <%= meta.total %></li>
                                  </ul>
                                  <ul class="pagination pull-right">
                                    <li class="previous"><a href="#">Prev</a></li>
                                    <% if(meta.pageCount > 1)  {%>
                                        <% for(var i=1; i <= meta.pageCount; i++) { %>
                                            <li><a href="<%=sails.getBaseUrl()%>/dashboard/category?page=<%= i %>"><%= i %></a></li>
                                         <% } %>
                                    <%}%> 
                                    <li class="next"><a href="#">Next</a></li>
                                  </ul>
                              </div>
                          </div>
                          <!-- /.panel-body -->
                      </div>
                      <!-- /.panel -->
                  </div>
                  <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
                <!-- END CONTENT -->
            </div>   
